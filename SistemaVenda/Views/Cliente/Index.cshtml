@model List<SistemaVenda.Entidades.Cliente>;

@{
    ViewData["Title"] = "Cliente";
}

<h2>Clientes</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:#f6f6f6;">
            <td>Código</td>
            <td>Nome</td>
            <td>Email</td>
            <td>CNPJ_CPF</td>
            <td>Celular</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr style="cursor:pointer" onclick="Editar(@item.Codigo)">
            <td> @item.Codigo</td>
            <td> @item.Nome</td>
            <td> @item.Email</td>
            <td> @item.CNPJ_CPF</td>
            <td> @item.Celular</td>
        </tr>
        }
    </tbody>
</table>
<br />
<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Cliente</button>

<script>
    function Editar(Codigo) {
        window.location = window.origin + "\\Cliente\\Cadastro\\" + Codigo;
    }

    function Cadastrar() {
        window.location = window.origin + "\\Cliente\\Cadastro";
    }
</script>