@model List<SistemaVenda.Entidades.Produto>;

@{
    ViewData["Title"] = "Produto";
}

<h2>Produtos</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:#f6f6f6;">
            <td>Código</td>
            <td>Descrição</td>
            <td>Quantidade</td>
            <td>Valor</td>
            <td>Categoria</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr style="cursor:pointer" onclick="Editar(@item.Codigo)">
            <td> @item.Codigo</td>
            <td> @item.Descricao</td>
            <td> @item.Quantidade</td>
            <td> @item.Valor</td>
            <td> @item.Categoria.Descricao</td>
        </tr>
        }
    </tbody>
</table>
<br />
<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Produto</button>

<script>
    function Editar(Codigo) {
        window.location = window.origin + "\\Produto\\Cadastro\\" + Codigo;
    }

    function Cadastrar() {
        window.location = window.origin + "\\Produto\\Cadastro";
    }
</script>